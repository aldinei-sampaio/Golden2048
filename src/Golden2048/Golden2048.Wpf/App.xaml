<Application x:Class="Golden2048.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Golden2048.Wpf"
             StartupUri="TestWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\Animations.xaml" />
                <ResourceDictionary Source="Resources\Storyboards\Start.xaml" />
                <ResourceDictionary Source="Resources\Storyboards\Move.xaml" />
                <ResourceDictionary Source="Resources\Storyboards\Fade.xaml" />
                <ResourceDictionary Source="Resources\Storyboards\Merge.xaml" />
                <ResourceDictionary Source="Resources\Triggers\Start.xaml" />
                <ResourceDictionary Source="Resources\Triggers\Move.xaml" />
                <ResourceDictionary Source="Resources\Triggers\Fade.xaml" />
                <ResourceDictionary Source="Resources\Triggers\Merge.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
