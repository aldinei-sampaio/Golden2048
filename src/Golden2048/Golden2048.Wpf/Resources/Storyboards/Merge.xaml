<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Golden2048.Wpf.Resources.Storyboards"
    >
    
    <Storyboard x:Key="Merge">
        <DoubleAnimation 
                Storyboard.TargetProperty="RenderTransform.ScaleX" 
                From="1" 
                To="1.25" 
                Duration="0:0:0.25"
                />
        <DoubleAnimation 
                Storyboard.TargetProperty="RenderTransform.ScaleY" 
                From="1"
                To="1.25" 
                Duration="0:0:0.25" 
                />
        <DoubleAnimation 
                BeginTime="0:0:0.25"
                Storyboard.TargetProperty="RenderTransform.ScaleX" 
                From="1.25" 
                To="1" 
                Duration="0:0:0.10"
                />
        <DoubleAnimation 
                BeginTime="0:0:0.25"
                Storyboard.TargetProperty="RenderTransform.ScaleY" 
                From="1.25"
                To="1" 
                Duration="0:0:0.10" 
                />
    </Storyboard>

</ResourceDictionary>