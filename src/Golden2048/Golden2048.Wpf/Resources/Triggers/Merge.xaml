<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Golden2048.Wpf.Resources.Triggers"
    >

    <Style TargetType="Image">
        <Style.Triggers>
            <DataTrigger Binding="{Binding Transition}" Value="300">
                <DataTrigger.EnterActions>
                    <BeginStoryboard Storyboard="{StaticResource Merge}" />
                </DataTrigger.EnterActions>
            </DataTrigger>
            <DataTrigger Binding="{Binding Transition}" Value="301">
                <DataTrigger.EnterActions>
                    <BeginStoryboard Storyboard="{StaticResource Merge}" />
                </DataTrigger.EnterActions>
            </DataTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>