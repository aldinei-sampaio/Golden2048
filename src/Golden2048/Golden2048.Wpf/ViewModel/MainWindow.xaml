<Window 
    x:Class="Golden2048.Wpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Golden2048.Wpf"
    mc:Ignorable="d"
    Title="Golden 2048" Height="500" Width="500"
    >

    <Grid>
        <Canvas Name="BoardSpace">
            <Canvas.Resources>
                <Style TargetType="Image">
                    <Setter Property="Width" Value="100" />
                    <Setter Property="Height" Value="100" />
                    <Setter Property="Canvas.Left" Value="0" />
                    <Setter Property="Canvas.Top" Value="0" />
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform CenterX="50" CenterY="50" />
                        </Setter.Value>
                    </Setter>
                </Style>
            </Canvas.Resources>
            <TextBlock Name="msg" Canvas.Top="400" />
        </Canvas>
    </Grid>
</Window>
